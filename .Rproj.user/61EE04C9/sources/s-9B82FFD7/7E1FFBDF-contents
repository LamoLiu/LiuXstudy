#Install package
install.packages("packagename")

#Open package
library()
library(packagename)

#What packages are installed?
  installed.packages() 
  library()

#Updating packages
old.packages()
update.packages()
install.packages("packagename")

#detach or uncheck checkobx in "Packages"
detach("package:packagename", unload=TRUE)

#remove.packages() or X in "Packages"
remove.packages("packagename")

#check R version
version

#session
sessionInfo()

#help
help("packageName")

#additional help
browseVignettes("packagename")
